<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="model3d-catalog-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/Model3dMetadataDS</non-jta-data-source>

        <class>si.fri.rso.kb6750.model3dcatalog.models.entities.Model3dMetadataEntity</class>
        <class>si.fri.rso.kb6750.model3dcatalog.models.entities.ImageMetadataEntity</class>
        <class>si.fri.rso.kb6750.model3dcatalog.models.converters.InstantAtributeConverter</class>

        
        
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source"
                      value="sql-scripts/init.sql" />
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
